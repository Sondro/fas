FIND_PATH(LIBSOUNDPIPE_INCLUDE_DIR NAMES soundpipe.h)
FIND_LIBRARY(LIBSOUNDPIPE_LIBRARIES NAMES soundpipe)

IF(LIBSOUNDPIPE_INCLUDE_DIR AND LIBSOUNDPIPE_LIBRARIES)
	SET(LIBSOUNDPIPE_FOUND TRUE)
ENDIF(LIBSOUNDPIPE_INCLUDE_DIR AND LIBSOUNDPIPE_LIBRARIES)

IF(LIBSOUNDPIPE_FOUND)
	IF (NOT LibSoundpipe_FIND_QUIETLY)
		MESSAGE(STATUS "Found libsoundpipe includes: ${LIBSOUNDPIPE_INCLUDE_DIR}/soundpipe.h")
		MESSAGE(STATUS "Found libsoundpipe library: ${LIBSOUNDPIPE_LIBRARIES}")
	ENDIF (NOT LibSoundpipe_FIND_QUIETLY)
ELSE(LIBSOUNDPIPE_FOUND)
	IF (LibSoundpipe_FIND_REQUIRED)
		MESSAGE(FATAL_ERROR "Could NOT find libsoundpipe development files")
	ENDIF (LibSoundpipe_FIND_REQUIRED)
ENDIF(LIBSOUNDPIPE_FOUND)
