FIND_PATH(LIBLO_INCLUDE_DIR NAMES lo/lo.h)
FIND_LIBRARY(LIBLO_LIBRARIES NAMES lo)

IF(LIBLO_INCLUDE_DIR AND LIBLO_LIBRARIES)
	SET(LIBLO_FOUND TRUE)
ENDIF(LIBLO_INCLUDE_DIR AND LIBLO_LIBRARIES)

IF(LIBLO_FOUND)
	IF (NOT Liblo_FIND_QUIETLY)
		MESSAGE(STATUS "Found liblo includes: ${LIBLO_INCLUDE_DIR}/lo.h")
		MESSAGE(STATUS "Found liblo library: ${LIBLO_LIBRARIES}")
	ENDIF (NOT Liblo_FIND_QUIETLY)
ELSE(LIBLO_FOUND)
	IF (Liblo_FIND_REQUIRED)
		MESSAGE(FATAL_ERROR "Could NOT find liblo development files")
	ENDIF (Liblo_FIND_REQUIRED)
ENDIF(LIBLO_FOUND)
